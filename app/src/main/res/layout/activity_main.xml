<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">


    <!-- Title for the app -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RGB Color  Mixer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- A brief description for the user -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Enter two hexadecimals characters between 0-9 , A-F or a-f without the '#' for each channel"
        android:textSize="19.5sp"
        android:textStyle="italic"
        android:justificationMode="inter_character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <!-- Red Channel Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/redInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Red Channel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:boxStrokeColor="#800000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/redTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Green Channel Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/greenInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Green Channel"
        app:boxStrokeColor="#008000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/greenTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Blue Channel Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/blueInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Blue Channel"
        app:boxStrokeColor="#000080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/blueTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button to generate the color -->
    <Button
        android:id="@+id/generateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Generate Color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueInputLayout" />

    <!-- A view to display the generated color -->

    <View
        android:id="@+id/colorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateButton" />

    <!-- TextView to display the color code, centered on colorView -->
    <TextView
        android:id="@+id/colorCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:background="#80FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/colorView"
        app:layout_constraintBottom_toBottomOf="@+id/colorView"
        app:layout_constraintStart_toStartOf="@+id/colorView"
        app:layout_constraintEnd_toEndOf="@+id/colorView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
